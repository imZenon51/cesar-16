
	ORG 1024
DW 10 	 ; TAMANHO DO VETOR

	ORG 1026

DW 1030		 ; ENDEREÇO INICAL DO VETOR

	ORG 1028
DW  65		; VALOR A SER BUSCADO

	ORG 0

	MOV 1024, R0
	MOV 1026, R1
	MOV 1029, R2
	CLR R3

LOOP_BUSCA:
	CMP (R1)+, R2 ; COMPARA R1-R2, E INCREMENTA NO REGISTRADOR
	BEQ ENCONTRADO ; SE IGUAL
	INC R3
	DEC R0
	BR LOOP_BUSCA
	BEQ NAOENCONTRADO
	

ENCONTRADO:
	
	MOV R3, 1030
	HLT
NAOENCONTRADO:

	MOV #-1, R3
	HLT
